{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "rootDir": "src",
    "outDir": "dist",

    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },

    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
